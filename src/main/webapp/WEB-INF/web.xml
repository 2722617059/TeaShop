<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>Archetype Created Web Application</display-name>

    <!--    用户登录servlet-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.tee.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <!--    用户注册Servlet-->
    <servlet>
        <servlet-name>UserRegistServlet</servlet-name>
        <servlet-class>com.tee.servlet.UserRegistServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserRegistServlet</servlet-name>
        <url-pattern>/UserRegistServlet</url-pattern>
    </servlet-mapping>
    <!--    管理员登录Servlet-->
    <servlet>
        <servlet-name>AdminLoginServlet</servlet-name>
        <servlet-class>com.tee.servlet.AdminLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminLoginServlet</servlet-name>
        <url-pattern>/AdminLoginServlet</url-pattern>
    </servlet-mapping>
    <!--    管理员注册Servlet-->
    <servlet>
        <servlet-name>AdminRegistServlet</servlet-name>
        <servlet-class>com.tee.servlet.AdminRegistServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminRegistServlet</servlet-name>
        <url-pattern>/AdminRegistServlet</url-pattern>
    </servlet-mapping>
    <!--  添加购物车-->
    <servlet>
        <servlet-name>AddCartServlet</servlet-name>
        <servlet-class>com.tee.servlet.AddCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCartServlet</servlet-name>
        <url-pattern>/AddCartServlet</url-pattern>
    </servlet-mapping>
    <!--    删除购物车-->
    <servlet>
        <servlet-name>DelCartServlet</servlet-name>
        <servlet-class>com.tee.servlet.DelCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DelCartServlet</servlet-name>
        <url-pattern>/DelCartServlet</url-pattern>
    </servlet-mapping>
    <!--  资料修改Servlet-->
    <servlet>
        <servlet-name>DataModifyServlet</servlet-name>
        <servlet-class>com.tee.servlet.DataModifyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DataModifyServlet</servlet-name>
        <url-pattern>/DataModifyServlet</url-pattern>
    </servlet-mapping>
    <!--  新建收件人信息-->
  <servlet>
    <servlet-name>AddAddressServlet</servlet-name>
    <servlet-class>com.tee.servlet.AddAddressServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddAddressServlet</servlet-name>
    <url-pattern>/AddAddressServlet</url-pattern>
  </servlet-mapping>
</web-app>
