<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>Archetype Created Web Application</display-name>

    <!--    用户登录servlet-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.tee.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <!--    用户注册Servlet-->
    <servlet>
        <servlet-name>UserRegistServlet</servlet-name>
        <servlet-class>com.tee.servlet.UserRegistServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserRegistServlet</servlet-name>
        <url-pattern>/UserRegistServlet</url-pattern>
    </servlet-mapping>
    <!--    管理员登录Servlet-->
    <servlet>
        <servlet-name>AdminLoginServlet</servlet-name>
        <servlet-class>com.tee.servlet.AdminLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminLoginServlet</servlet-name>
        <url-pattern>/AdminLoginServlet</url-pattern>
    </servlet-mapping>
    <!--    管理员注册Servlet-->
    <servlet>
        <servlet-name>AdminRegistServlet</servlet-name>
        <servlet-class>com.tee.servlet.AdminRegistServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminRegistServlet</servlet-name>
        <url-pattern>/AdminRegistServlet</url-pattern>
    </servlet-mapping>
    <!--  添加购物车-->
    <servlet>
        <servlet-name>AddCartServlet</servlet-name>
        <servlet-class>com.tee.servlet.AddCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCartServlet</servlet-name>
        <url-pattern>/AddCartServlet</url-pattern>
    </servlet-mapping>
    <!--    删除购物车-->
    <servlet>
        <servlet-name>DelCartServlet</servlet-name>
        <servlet-class>com.tee.servlet.DelCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DelCartServlet</servlet-name>
        <url-pattern>/DelCartServlet</url-pattern>
    </servlet-mapping>
    <!--  资料修改Servlet-->
    <servlet>
        <servlet-name>DataModifyServlet</servlet-name>
        <servlet-class>com.tee.servlet.DataModifyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DataModifyServlet</servlet-name>
        <url-pattern>/DataModifyServlet</url-pattern>
    </servlet-mapping>
    <!--  新建收件人信息-->
    <servlet>
        <servlet-name>AddAddressServlet</servlet-name>
        <servlet-class>com.tee.servlet.AddAddressServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddAddressServlet</servlet-name>
        <url-pattern>/AddAddressServlet</url-pattern>
    </servlet-mapping>
    <!--    新建订单-->
    <servlet>
        <servlet-name>AddOrderServlet</servlet-name>
        <servlet-class>com.tee.servlet.AddOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddOrderServlet</servlet-name>
        <url-pattern>/AddOrderServlet</url-pattern>
    </servlet-mapping>
    <!--    修改用户密码-->
    <servlet>
        <servlet-name>ModifyPasswordServlet</servlet-name>
        <servlet-class>com.tee.servlet.ModifyPasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ModifyPasswordServlet</servlet-name>
        <url-pattern>/ModifyPasswordServlet</url-pattern>
    </servlet-mapping>
    <!--    修改管理员密码-->
    <servlet>
        <servlet-name>ModifyAdminPasswordServlet</servlet-name>
        <servlet-class>com.tee.servlet.ModifyAdminPasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ModifyAdminPasswordServlet</servlet-name>
        <url-pattern>/ModifyAdminPasswordServlet</url-pattern>
    </servlet-mapping>
    <!--    修改管理员信息-->
    <servlet>
        <servlet-name>AdminDataModifyServlet</servlet-name>
        <servlet-class>com.tee.servlet.AdminDataModifyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminDataModifyServlet</servlet-name>
        <url-pattern>/AdminDataModifyServlet</url-pattern>
    </servlet-mapping>
    <!--    修改产品信息-->
    <servlet>
        <servlet-name>CommodityModifyServlet</servlet-name>
        <servlet-class>com.tee.servlet.CommodityModifyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CommodityModifyServlet</servlet-name>
        <url-pattern>/CommodityModifyServlet</url-pattern>
    </servlet-mapping>
    <!--    删除商品-->
    <servlet>
        <servlet-name>DelCommodityServlet</servlet-name>
        <servlet-class>com.tee.servlet.DelCommodityServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DelCommodityServlet</servlet-name>
        <url-pattern>/DelCommodityServlet</url-pattern>
    </servlet-mapping>
    <!--    订单状态修改-->
    <servlet>
        <servlet-name>OrderStatusModifyServlet</servlet-name>
        <servlet-class>com.tee.servlet.OrderStatusModifyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderStatusModifyServlet</servlet-name>
        <url-pattern>/OrderStatusModifyServlet</url-pattern>
    </servlet-mapping>
    <!--    添加商品-->
    <servlet>
        <servlet-name>AddCommodityServlet</servlet-name>
        <servlet-class>com.tee.servlet.AddCommodityServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCommodityServlet</servlet-name>
        <url-pattern>/AddCommodityServlet</url-pattern>
    </servlet-mapping>
    <!--    新增会话-->
    <servlet>
        <servlet-name>AddMessageServlet</servlet-name>
        <servlet-class>com.tee.servlet.AddMessageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddMessageServlet</servlet-name>
        <url-pattern>/AddMessageServlet</url-pattern>
    </servlet-mapping>
    <!--    管理员回复会话-->
    <servlet>
        <servlet-name>AddAdminMessageServlet</servlet-name>
        <servlet-class>com.tee.servlet.AddAdminMessageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddAdminMessageServlet</servlet-name>
        <url-pattern>/AddAdminMessageServlet</url-pattern>
    </servlet-mapping>
</web-app>
